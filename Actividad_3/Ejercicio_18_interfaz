    private void btnCalcularActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        double salarioneto, salariobruto, valorretención;
        double horastrabajadasmes = Double.parseDouble(txtHora.getText());
        int valorhora = Integer.parseInt(txtValor.getText());
        double porcentajeretencion = Double.parseDouble(txtRetencion.getText());
        double retencion = porcentajeretencion/100;
        salariobruto = horastrabajadasmes *valorhora;
        valorretención = salariobruto*retencion;
        salarioneto = salariobruto - valorretención;
        txtNeto.setText(String.valueOf(salarioneto));
        txtBruto.setText(String.valueOf(salariobruto));
    }                                           

    private void btnBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        txtNeto.setText("");
        txtBruto.setText("");
        txtCodigo.setText("");
        txtNombre.setText("");
        txtHora.setText("");
        txtValor.setText("");
        txtRetencion.setText("");
    }                                         

